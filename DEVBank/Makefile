# Compilador e flags
CXX = g++
CXXFLAGS = -Wall -Wextra -std=c++17 -I./src

# Diret√≥rios
SRC_DIR = src
BIN_DIR = .

# Arquivos fonte e objetos
SRC_FILES = $(wildcard $(SRC_DIR)/*.cpp)
OBJ_FILES = $(SRC_FILES:.cpp=.o)

# Nome do execut√°vel
TARGET = $(BIN_DIR)/DEVBank.exe

# Regra padr√£o
all: $(TARGET)

# Regra para gerar o execut√°vel
$(TARGET): $(OBJ_FILES)
	@echo "üîß Ligando tudo em $(TARGET)..."
	$(CXX) $(CXXFLAGS) -o $@ $^

# Regra para compilar cada .cpp em .o
$(SRC_DIR)/%.o: $(SRC_DIR)/%.cpp
	@echo "üß± Compilando $<..."
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Limpeza dos objetos e execut√°vel
clean:
	@echo "üßπ Limpando arquivos objeto..."
	rm -f $(SRC_DIR)/*.o

mrproper: clean
	@echo "üóëÔ∏è Removendo execut√°vel..."
	rm -f $(TARGET)

# Executar o programa
run: all
	@echo "üöÄ Executando o programa..."
	./$(TARGET)
